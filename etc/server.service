[Unit]
Description=NearAI Server
After=network.target

[Service]
User=setup
Type=simple
Restart=no
WorkingDirectory=/home/setup/.nearai/nearai-cli
EnvironmentFile=/home/setup/.nearai/nearai-cli/etc/server.env
ExecStart=/home/setup/.nearai/nearai-cli/etc/start_server.sh
LimitMEMLOCK=infinity
LimitRSS=infinity

[Install]
WantedBy=multi-user.target
